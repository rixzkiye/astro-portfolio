// src/pages/papers.astro
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Import komponen Pagination dan CardContainer
import Pagination from "../components/Pagination.astro";
import CardContainer from "../components/CardContainer.tsx"; // Import komponen CardContainer React


// Fetch all published papers
const allPapers = await getCollection('papers', ({ data }) => data.status === 'published');
const sortedPapers = allPapers.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());


// Define items per page for pagination
const itemsPerPage = 9; // Anda bisa menyesuaikan angka ini, sebaiknya sama dengan projects

// --- getStaticPaths for Pagination ---
export async function getStaticPaths() {
  const papers = await getCollection('papers', ({ data }) => data.status === 'published');
  const sortedPapers = papers.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

  const itemsPerPage = 9; // Match the number above

  // Paginate the papers
  const totalPages = Math.ceil(sortedPapers.length / itemsPerPage);
  const paths = [];

  for (let i = 1; i <= totalPages; i++) {
    paths.push({
      params: { page: i.toString() }, // Slug will be /papers/1, /papers/2, etc.
      props: {
        currentPage: i,
        totalPages: totalPages,
        // Pass only the items for the current page
        // Konversi data Astro Collection ke objek JavaScript biasa
        paginatedItems: sortedPapers.slice(
          (i - 1) * itemsPerPage,
          i * itemsPerPage
        ).map(item => ({
            ...item.data,
            slug: item.slug,
            type: 'paper' as const,
            date: item.data.date ? item.data.date.toISOString() : undefined,
            externalLink: item.data.externalLink || undefined,
            githubLink: item.data.githubLink || undefined,
            youtubeLink: item.data.youtubeLink || undefined,
            spotifyLink: item.data.spotifyLink || undefined,
            pdfUrl: item.data.pdfUrl || undefined,
            readTime: item.data.readTime || undefined,
            featured: item.data.featured || false,
            category: item.data.category || 'unknown',
            tags: item.data.tags || [],
            thumbnail: item.data.thumbnail || undefined,
        })),
      },
    });
  }

  // Add a path for the first page without a number slug (/papers/)
   paths.push({
       params: { page: undefined },
       props: {
           currentPage: 1,
           totalPages: totalPages,
           paginatedItems: sortedPapers.slice(0, itemsPerPage).map(item => ({
               ...item.data,
               slug: item.slug,
               type: 'paper' as const,
               date: item.data.date ? item.data.date.toISOString() : undefined,
               externalLink: item.data.externalLink || undefined,
               githubLink: item.data.githubLink || undefined,
               youtubeLink: item.data.youtubeLink || undefined,
               spotifyLink: item.data.spotifyLink || undefined,
               pdfUrl: item.data.pdfUrl || undefined,
               readTime: item.data.readTime || undefined,
               featured: item.data.featured || false,
               category: item.data.category || 'unknown',
               tags: item.data.tags || [],
               thumbnail: item.data.thumbnail || undefined,
           })),
       }
   });

  return paths;
}

// --- Props for the current page ---
type Props = {
  currentPage: number;
  totalPages: number;
  paginatedItems: any[];
};

const { currentPage, totalPages, paginatedItems } = Astro.props;

// Konversi string tanggal ISO kembali menjadi objek Date di sisi klien
const itemsWithDateObjects = paginatedItems.map(item => ({
    ...item,
    date: item.date && typeof item.date === 'string' ? new Date(item.date) : undefined
}));


// --- Code for categories (keep for now, might be useful for future filtering) ---
// type CategoryKey = 'esai' | 'puisi' | 'artikel' | 'cerpen';
